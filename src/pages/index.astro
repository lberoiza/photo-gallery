---
import Layout from '../layouts/Layout.astro';
import { galleryInformation } from "@/data/data";
import { Photo } from "@/models/Photo.model";
import PhotoCard from "@/components/PhotoCard.astro";

const photos: Photo[] = galleryInformation.photos;
---


<Layout title={galleryInformation.title}>
    <main>
        <h1>{galleryInformation.title}</h1>
        <div class="main__imagecontainer">
          {photos.map((photo, index) => (
            <PhotoCard photo={photo} key={index} />
          ))}
        </div>
    </main>
</Layout>

<style>

  h1 {
    text-align: center;
    margin-bottom: 2rem;
  }

  main {
    margin: 0 auto;
    padding: 1rem;
    width: 90%;
    max-width: 1400px;
  }

  .main__imagecontainer {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }



</style>
